<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    android: id="@+id/layout_home"
    tools:context=".home_view">

    <TextView
        android:id="@+id/id_txt_mislugares_titulo"
        android:layout_width="408dp"
        android:layout_height="96dp"
        android:layout_marginBottom="22dp"
        android:autoText="false"
        android:background="#FFF400"

        android:backgroundTint="#FFF400"

        android:fontFamily="@font/montserrat"

        android:gravity="center"
        android:text="MIS LUGARES"
        android:textIsSelectable="false"
        android:textSize="34sp"
        android:typeface="serif"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toTopOf="@+id/id_txt_mislugares_nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/id_txt_mislugares_nombre"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Entra un nombre del Sitio"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/id_txt_mislugares_descripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.288"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_txt_mislugares_titulo" />

    <EditText
        android:id="@+id/id_txt_mislugares_descripcion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Añade descripción del Sitio"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.288"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_txt_mislugares_nombre" />

    <RatingBar
        android:id="@+id/id_rb_mislugares_calificacion"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:max="5"
        android:numStars="5"
        android:progressTint="#023DBF"
        android:rating="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_txt_mislugares_descripcion" />

    <Button
        android:id="@+id/id_Btn_mislugeres_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Salvar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="221dp"
        android:layout_height="120dp"
        android:layout_marginTop="150dp"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_txt_mislugares_descripcion">

        <Spinner
            android:id="@+id/id_mis_lugares_long_latitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:backgroundTint="#BA1B06"
            android:visibility="visible"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/id_txt_mislugares__longitud"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Digite Longitud"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/id_txt_mislugares_Latitud"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Digite Latitud"
            android:inputType="textPersonName" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/id_btn_mislugares_guardar"
        android:layout_width="75dp"
        android:layout_height="42dp"
        android:layout_marginStart="310dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#023DBF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_rb_mislugares_calificacion"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <ImageView
        android:id="@+id/id_img_mislugares_imagen"
        android:layout_width="150dp"
        android:layout_height="189dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:srcCompat="@drawable/png_sitimapp_logo" />

    <Spinner
        android:id="@+id/id_Sp_mis_lugares_seleccion"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:entries="@array/mislugares"
        app:layout_constraintTop_toBottomOf="@+id/id_rb_mislugares_calificacion"
        tools:layout_editor_absoluteX="1dp" />

</android.support.constraint.ConstraintLayout>