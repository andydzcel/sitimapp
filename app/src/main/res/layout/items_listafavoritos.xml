<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:backgroundTint="@color/Azul_Oscuro_fondos_claros"
        app:cardCornerRadius="15dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="65dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:paddingStart="5dp"
                        app:srcCompat="@drawable/ic_ubicacion" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_itemslistafavoritos_nombre"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center_vertical"
                            android:paddingStart="5dp"
                            android:text="Nombre del sitio guardado"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_itemslistafavoritos_categoria"
                                android:layout_width="125dp"
                                android:layout_height="30dp"
                                android:layout_weight="0"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center_vertical"
                                android:hint="CategorÃ­a"
                                android:paddingStart="5dp"
                                android:textSize="12dp"
                                android:textStyle="italic" />

                            <RatingBar
                                android:id="@+id/rtbar_listafavoritos_calificacion"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0"
                                android:indeterminate="false"
                                android:max="5"
                                android:numStars="5"
                                android:progress="1"
                                android:progressTint="@color/Azul_Oscuro_fondos_claros"
                                android:stepSize="1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="2" />

                            <ImageButton
                                android:id="@+id/imgbtn_itemslistafavoritos_vermas"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:layout_weight="0"
                                android:backgroundTint="#00FFFFFF"
                                app:srcCompat="@drawable/ic_mapa" />

                            <ImageButton
                                android:id="@+id/imgbtn_itemslistafavoritos_eliminar"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:layout_weight="0"
                                android:backgroundTint="#00FFFFFF"
                                app:srcCompat="@drawable/ic_eliminar" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>